generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  BLOCKED
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  password      String
  role          UserRole     @default(USER)
  image         String?
  emailVerified DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  // Relations
  teams         TeamMember[]
  createdTeams  Team[]       @relation("TeamAdmin")
  assignedTasks Task[]       @relation("TaskAssignee")
  
  // Admin actions tracking
  tasksCreated  Task[]       @relation("TaskCreator")
  teamsManaged  Team[]       @relation("TeamManager")
  
  // Audit
  deletedAt     DateTime?
  deletedBy     String?
  User          User?        @relation("DeletedByUser", fields: [deletedBy], references: [id])
  deletedUsers  User[]       @relation("DeletedByUser")
}

model Team {
  id          String       @id @default(cuid())
  name        String
  description String?
  createdBy   String
  managedBy   String
  
  // Relations
  admin       User         @relation("TeamAdmin", fields: [createdBy], references: [id])
  manager     User         @relation("TeamManager", fields: [managedBy], references: [id])
  members     TeamMember[]
  tasks       Task[]
  
  // Metadata
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isArchived  Boolean      @default(false)
}

model TeamMember {
  id        String    @id @default(cuid())
  userId    String
  teamId    String
  role      String    @default("MEMBER") // MEMBER, LEADER
  joinedAt  DateTime  @default(now())
  
  // Relations
  user      User      @relation(fields: [userId], references: [id])
  team      Team      @relation(fields: [teamId], references: [id])
  
  // Constraints
  @@unique([userId, teamId])
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    Int        @default(0) // 0: Low, 1: Medium, 2: High
  dueDate     DateTime?
  
  // Relations
  teamId      String
  team        Team       @relation(fields: [teamId], references: [id])
  
  createdBy   String
  creator     User       @relation("TaskCreator", fields: [createdBy], references: [id])
  
  assignedTo  String?
  assignee    User?      @relation("TaskAssignee", fields: [assignedTo], references: [id])
  
  // Metadata
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  completedAt DateTime?
}

// Activity logging for audit trail
model ActivityLog {
  id          String   @id @default(cuid())
  action      String   // CREATE_TASK, UPDATE_STATUS, ADD_MEMBER, etc.
  entityType  String   // Task, Team, User, etc.
  entityId    String
  userId      String
  details     Json?
  createdAt   DateTime @default(now())
}
